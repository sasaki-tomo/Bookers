<h1>Editing Book</h1>

<% @book.errors.full_messages.each do |message| %>
    <li>error : <%= message %></li>
<% end %>

<%= form_with model:@book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<p><%= f.submit 'Update Book' %></p>

<%= link_to "show", book_path(@book) %>
|
<a class="Back" href="/books">Back</a>

<% end %>